---
import type { ImageMetadata } from "astro";
import { Image } from "astro:assets";
import type { CollectionEntry } from "astro:content";

interface Props {
    imagePath?: string;
    altText: string;
    title: string;
    pubDate: Date;
    description: string;
    slug: string;
    tags: Omit<CollectionEntry<'tags'>, 'data'>[];
}

const { imagePath,slug, altText, title, description, tags, pubDate } = Astro.props;
const images = import.meta.glob<{ default: ImageMetadata }>(
    "/src/assets/**/*.{jpeg,jpg,png,gif}",
);

if (
    imagePath !== undefined &&
    !images[imagePath]
)
    throw new Error(
        `"${imagePath}" does not exist in glob: "src/assets/*.{jpeg,jpg,png,gif}"`,
    );
---

<article
    class="flex relative border group hover:bg-layer-2 transition-colors p-4 rounded-[20px] flex-col w-80 items-start justify-between"
>
    <div class="relative w-full">
        {
            imagePath && (
                <Image
                    class="aspect-[16/9] w-full rounded-2xl bg-gray-100 object-cover sm:aspect-[2/1] lg:aspect-[3/2]"
                    alt={altText}
                    src={images[imagePath]()}
                />
            )
        }
        {
            !imagePath && (
                <div class="aspect-[16/9] w-full rounded-2xl bg-gray-100 object-cover sm:aspect-[2/1] lg:aspect-[3/2]" />
            )
        }
        <div
            class="absolute inset-0 rounded-2xl ring-1 ring-gray-900/10 ring-inset"
        >
        </div>
    </div>
    <div class="max-w-xl">
        <div class="mt-8 flex items-center gap-x-4 text-xs">
            <time datetime={`${pubDate}`} class="text-gray-500">
                {
                    new Date(pubDate).toLocaleDateString("en-US", {
                        year: "numeric",
                        month: "long",
                        day: "numeric",
                    })
                }
            </time>
            {
                tags.map((tag) => (
                    <a
                        href="#"
                        class="relative z-10 rounded-full bg-gray-50 py-1.5 px-3 font-medium text-gray-600 hover:bg-gray-100"
                    >
                        {tag.id}
                    </a>
                ))
            }
        </div>
        <h3
            class="mt-3 text-lg font-semibold leading-6 text-gray-900 group-hover:text-gray-600"
        >
            <a href={`/article/${slug}`}>
                <span class="absolute inset-0"></span>
                {title}
            </a>
        </h3>
        <p class="mt-5 line-clamp-3 text-sm leading-6 text-gray-600">
            {description}
        </p>
    </div>
</article>
